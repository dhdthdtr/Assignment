<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray"
    tools:context=".OptionMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Quantity"/>

            <EditText
                android:id="@+id/edittext_quantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:inputType="number"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sweetFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Flavor"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <RadioGroup
                android:id="@+id/rg_sweetFlavor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/rb_chocolateFlavor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chocolate"/>

                <RadioButton
                    android:id="@+id/rb_mocha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mocha"/>

                <RadioButton
                    android:id="@+id/rb_marble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marble"/>

                <RadioButton
                    android:id="@+id/rb_doubleDutch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Double Dutch"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_normalFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Flavor"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <RadioGroup
                android:id="@+id/rg_normalFlavor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/rb_garlic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Garlic"/>

                <RadioButton
                    android:id="@+id/rb_cheese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cheese"/>

                <RadioButton
                    android:id="@+id/rb_plain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plain"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_icing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Icing"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <RadioGroup
                android:id="@+id/rg_icing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/rb_chocolateIcing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chocolate"/>

                <RadioButton
                    android:id="@+id/rb_caramel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caramel"/>

                <RadioButton
                    android:id="@+id/rb_strawberry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strawberry"/>

                <RadioButton
                    android:id="@+id/rb_vanilla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vanilla"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Size"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <RadioGroup
                android:id="@+id/rg_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/rb_big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Big"/>

                <RadioButton
                    android:id="@+id/rb_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Small"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:backgroundTint="#3D5B59"
            android:text="Submit"
            android:textSize="20dp"/>
    </LinearLayout>
</ScrollView>